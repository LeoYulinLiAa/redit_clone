<h1>New Sub</h1>
<form action="<%= subs_path %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <label>Title
    <input type="text" name="sub[title]">
  </label>
  <label>Description
    <textarea name="sub[description]">
    </textarea>
  </label>
  <button type="submit">Create</button>
</form>